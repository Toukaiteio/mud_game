{
    "#FUNCTION_START_A_NEWDAY":{
        "COMMENT":"anything start with # please do not change its name.",
        "text":"_function_event_start_a_new_day",
        "effect":{
            "remove":{
                "_TAG_HAVE_A_NORMAL_REST":1,
                "_TAG_HAVE_A_GOOD_REST":1,
                "_TAG_HAVE_A_BAD_REST":1
            },
            "modify":{
                "_TAG_HAVENT_REST_YET":1,
                "FIRSTTURNINNEWDAY":1
            }
        }
    },
    "FUNCTION_REST_GOOD":{
        "text":"_function_event_have_a_good_rest",
        "useVal":{
            "PlayerStatus.HP":"v1_Function_REST",
            "PlayerStatus.HAPPY":"v2_Function_REST"
        },
        "effect":{
            "add":{
                "PlayerStatus.HAPPY":15,
                "PlayerStatus.HP":30
            },
            "modify":{
                "_TAG_HAVE_A_GOOD_REST":1
            },
            "remove":{
                "_TAG_HAVENT_REST_YET":1
            }
        }
    },
    "FUNCTION_REST_NORMAL":{
        "text":"_function_event_have_a_normal_rest",
        "useVal":{
            "PlayerStatus.HP":"v1_Function_REST",
            "PlayerStatus.HAPPY":"v2_Function_REST"
        },
        "effect":{
            "add":{
                "PlayerStatus.HAPPY":7,
                "PlayerStatus.HP":28
            },
            "modify":{
                "_TAG_HAVE_A_NORMAL_REST":1
            },
            "remove":{
                "_TAG_HAVENT_REST_YET":1
            }
        }
        
    },
    "FUNCTION_REST_BAD":{
        "text":"_function_event_have_a_terrible_rest",
        "useVal":{
            "PlayerStatus.HP":"v1_Function_REST",
            "PlayerStatus.HAPPY":"v2_Function_REST"
        },
        "effect":{
            "add":{
                "PlayerStatus.HAPPY":-2,
                "PlayerStatus.HP":8
            },
            "modify":{
                "_TAG_HAVE_A_BAD_REST":1
            },
            "remove":{
                "_TAG_HAVENT_REST_YET":1
            }
        }
        
    },
    "FUNCTION_ALLOW_PLANT":{
        "text":"_function_event_allow_player_plant",
        "effect":{
            "modify":{
                "ALLOWPLANT":1
            }
        }
    },
    "FUNCTION_FORBID_PLANT":{
        "effect":{
            "remove":{
                "ALLOWPLANT":1
            }
        }
    },
    "FUNCTION_START_TALK":{
        "text":"#PROGRAM_HOLD_TALK_CONTENT",
        "applyVal":{
            "TargetID_TALK":"number"
        },
        "effect":{
            "modify":{
                "TALKINGTO":"#$TargetID_TALK"
            }
        }
    },
    "FUNCTION_END_TALK":{
        "effect":{
            "remove":{
                "TALKINGTO":1
            }
        }
    }
}